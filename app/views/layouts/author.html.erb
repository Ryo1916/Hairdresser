<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:page_title) %> | RailsBlog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= tinymce_assets %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>

    <% if notice.present? %>
      <p class="notice alert alert-success" role="alert" style="text-align:center; margin-bottom:0px;"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger" role="alert" style="text-align:center; margin-bottom:0px;"><%= alert %></p>
    <% end %>

    <% if current_page?(root_path) %>
    <div class="container-fluid <%= controller_name %> <%= action_name %>" style="margin-top:0;">
    <% else %>
    <div class="container-fluid <%= controller_name %> <%= action_name %>">
    <% end %>
      <%= yield %>
    </div>
  </body>
</html>
