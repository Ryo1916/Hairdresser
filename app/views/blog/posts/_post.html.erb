<div class="col-12 col-sm-6 col-lg-4">
  <div class="card">
    <%= link_to post do %>
      <%= image_tag(parsing_img(post.body), class: "card-img-top") %>
    <% end %>
    <div class="card-body">
      <p class="card-title"><%= link_to post.title, post %></p>
      <p class="tags">
        <%== post.tags.map {
              |t| link_to t.name, posts_path(tag: t.name)
             }.join(' ') %>
      </p>
      <div class="views-and-published-date">
        <span><%= post.hits %> views</span>
        <span class="float-right"><%= post.display_day_published %></span>
      </div>
    </div>
  </div>
</div>
