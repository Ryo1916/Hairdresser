<%= form_with url: authors_posts_path, method: :get, local: true do |f| %>
  <div class="input-group">
    <%= f.text_field :title_or_body, class: 'form-control', placeholder: 'Search title or text' %>
    <div class="input-group-btn">
      <%= f.submit 'Search', name: nil, class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
