<% provide(:page_title, 'All Posts') %>
<% provide(:author, 'active') %>
<div class="row">
  <%#= render 'sidebar' %>
  <div class="col-12 mt-3">
    <div class="mb-3">
      <%= link_to 'New post', new_authors_post_path, class: 'btn btn-primary btn-lg' %>
    </div>
    <table class="table table-striped">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Categories</th>
        <th colspan="5">Date</th>
      </tr>
      <%= render @posts %>
    </table>
  </div>
</div>
